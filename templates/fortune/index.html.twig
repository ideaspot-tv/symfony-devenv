{% extends 'base.html.twig' %}

{% block title %}Random Fortune Cookie Saying{% endblock %}

{% block body %}
    <main>
        <h1>Random Fortune Cookie Saying</h1>
        <div class="saying">{{ saying }}</div>
        <div class="more"><a href="{{ path('app_fortune') }}">Get another fortune cookie saying</a></div>
    </main>
{% endblock %}

{% block stylesheets %}
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Architects+Daughter&family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">

    <style>
        body {
            background: url("{{ asset('/cookie-background.jpg') }}");
            background-size: cover;
            background-repeat: no-repeat;
            background-position: center;
            height: 100vh;
            box-sizing: border-box;
            font-family: 'Poppins', sans-serif;
            text-align: center;
        }

        main {
            position: absolute;
            left: 50%;
            top: 50%;
            transform: translate(-50%, -50%);
            background-color: rgba(255, 255, 255, 0.8);
            padding: 20px;
            border-radius: 10px;
            display: flex;
            flex-direction: column;
            gap: 20px;
            align-items: center;
            width: 100%;
        }

        @media (min-width: 768px) {
            main {
                width: 600px;
            }
        }

        h1 {
            margin: 0;
            font-size: 1.25rem;
        }

        .saying {
            font-size: 1.5rem;
            font-style: italic;
            font-family: 'Architects Daughter', cursive;
        }
    </style>
{% endblock %}
